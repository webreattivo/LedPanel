<% layout('../layout/layout') -%>
<% include ../layout/header.ejs %>

<div class="row">
<div class="col-lg-12">
    <h3 class="pull-left">List Media</h3>
    <a href="/media/add" class="btn btn-success pull-right"><span class="glyphicon glyphicon-plus"></span> Add Media</a>
</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <hr />
    </div>
</div>

<% if (message.length > 0) { %>
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success"><%= message %></div>
        </div>
    </div>
<% } %>

<div class="row marketing">
	<% if(medias.length > 0) { %>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% medias.forEach(function (media){ %>
            <tr>
                <td><% if(media.title) { %> <%= media.title %> <% } else { %> No title <% } %></td>
                <td><% if(media.description) { %> <%= media.description %> <% } %></td>
                <td>
					<!-- Split button -->
					<div class="btn-group">
					  <a href="/media/edit/<%= media._id %>" class="btn btn-success"><span class="glyphicon glyphicon-pencil"></span> Modifica</a>
					  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					    <span class="caret"></span>
					    <span class="sr-only">Toggle Dropdown</span>
					  </button>
					  <ul class="dropdown-menu">
						<li><a href="/media/preview/<%= media._id %>"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Preview</a></li>
					    <li><a href="/raspberry/view/<%= media._id %>"><span class="glyphicon glyphicon-play" aria-hidden="true"></span> Send On Raspberry</a></li>
                        <li><a href="/media/remove/<%= media._id %>"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Elimina</a></li>
					  </ul>
					</div>
                </td>
            </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <div class="alert alert-warning" role="alert">No Media in Raspberry....</div>
    <% } %>
</div>
