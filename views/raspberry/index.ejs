<% layout('../layout/layout') -%>
<% include ../layout/header.ejs %>

<div class="row">
<div class="col-lg-12">
    <h3 class="pull-left">Run on Raspberry Media: <%= media.title %></h3>
    <a href="/media" class="btn btn-success pull-right"><span class="glyphicon glyphicon-arrow-left"></span> Go Back</a>
</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <hr />
        <div id="errorMessage" style="display: none;"></div>
    </div>
</div>

<% if(omx.loaded) { %>
	<div class="row">
		<div class="col-lg-12 text-center">
			<div class="alert alert-warning" role="alert">
				Omxplayer is still runnig from a another user. Close all sessions.
			</div>
			<a class="btn btn-default btn-lg" href="javascript:void(0);" role="button" id="buttonClose"><span class="glyphicon glyphicon-trash"></span> Close Sessions</a>
		</div>
	</div>

<% } else { %>

	<div class="row">
		<div class="col-lg-12 text-center">
			<a class="btn btn-default btn-lg" href="javascript:void(0);" data-id="<%= media._id %>" role="button" id="buttonPlay"> <span class="glyphicon glyphicon-play"></span> Play</a>
			<a class="btn btn-default btn-lg" href="javascript:void(0);" role="button" id="buttonPause"><span class="glyphicon glyphicon-pause"></span> Pause</a>
			<a class="btn btn-default btn-lg" href="javascript:void(0);" data-id="<%= media._id %>" role="button" id="buttonResume"><span class="glyphicon glyphicon-play"></span> Resume</a>
			<a class="btn btn-default btn-lg" href="javascript:void(0);" role="button" id="buttonQuit"><span class="glyphicon glyphicon-stop"></span> Quit</a>
		</div>
	</div>

	<div class="row" style="margin-top: 10px; display: none;" id="volume">
		<div class="col-lg-12 text-center">
			<a class="btn btn-default btn-lg" href="javascript:void(0);" role="button" id="buttonVolDown"> <span class="glyphicon glyphicon-volume-down"></span> Vol Down</a> 
			<a class="btn btn-default btn-lg" href="javascript:void(0);" role="button" id="buttonVolUp"><span class="glyphicon glyphicon-volume-up"></span> Vol Up</a>
			<br />
			<div id="volMessage" style="display: none;"></div>
		</div>
	</div>

<% } %>

<br />