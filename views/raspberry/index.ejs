<% layout('../layout/layout') -%>
<% include ../layout/header.ejs %>

<h3>Run on Raspberry Media: <%= media.title %></h3>
<hr>

<div class="row">
<div class="col-lg-12">
	<a href="/media" class="btn btn-success pull-right">Go Back</a>
</div>
</div>

<div class="row">
<div class="col-lg-12">
	<a class="btn btn-default" href="javascript:void(0);" data-id="<%= media._id %>" role="button" id="showButtonPlay">Play</a>
	<a class="btn btn-default" href="javascript:void(0);" role="button" id="showButtonPause">Pause</a>
    <a class="btn btn-default" href="javascript:void(0);" role="button" id="showButtonResume">Resume</a>
    <a class="btn btn-default" href="javascript:void(0);" role="button" id="showButtonQuit">Quit</a>
</div>
</div>