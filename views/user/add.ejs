<% layout('../layout/layout') -%>
<% include ../layout/header.ejs %>

<div class="row">
<div class="col-lg-12">
    <h3 class="pull-left">Add Users</h3>
    <a href="/user/add" class="btn btn-success pull-right"><span class="glyphicon glyphicon-plus"></span> Add User</a>
</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <hr />
    </div>
</div>

<div class="row marketing">
  <form class="form-signin" method="post" action="/user/add">
        <label for="inputFullname">Fullname</label>
        <input name="fullname" type="text" id="inputFullname" class="form-control bottom-10" placeholder="Fullname" required autofocus>

        <label for="inputUsername">Username</label>
        <input name="username" type="text" id="inputUsername" class="form-control bottom-10" placeholder="Username" autocomplete="off" required>

        <label for="inputPassword">Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control bottom-10" placeholder="Password" autocomplete="off" required>

        <label for="inputRole">Role</label>
        <select name="role" id="inputRole" class="form-control bottom-10">
            <option value="admin">Admin</option>
            <option value="user">User</option>
        </select>

        <button class="btn btn-lg btn-success btn-block" type="submit">Add</button>
    </form>
</div> <!-- /container -->
