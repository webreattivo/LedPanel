<% layout('../layout/layout') -%>
<% include ../layout/header.ejs %>

<div class="row">
<div class="col-lg-12">
    <h3 class="pull-left">Edit User: <%= user.fullname %></h3>
    <a href="/user" class="btn btn-success pull-right"><span class="glyphicon glyphicon-arrow-left"></span> Go Back</a>
</div>
</div>

<div class="row">
    <div class="col-lg-12">
        <hr />
    </div>
</div>

<div class="row marketing">
  <form class="form-signin" method="post" action="">
        <label for="inputFullname">Fullname</label>
        <input name="fullname" type="text" id="inputFullname" class="form-control bottom-10" placeholder="Fullname" value="<%= user.fullname %>" required autofocus>

        <label for="inputUsername">Username</label>
        <input name="username" type="text" id="inputUsername" class="form-control bottom-10" placeholder="Username" value="<%= user.username %>" autocomplete="off" required>

        <label for="inputPassword">Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control bottom-10" placeholder="Password" autocomplete="off" required>

        <label for="inputRole">Role</label>
        <select name="role" id="inputRole" class="form-control bottom-10">
            <option value="admin" <% if(user.role == 'admin') { %> selected <% } %>>Admin</option>
            <option value="user" <% if(user.role == 'user') { %> selected <% } %>>User</option>
        </select>

        <button class="btn btn-lg btn-success btn-block" type="submit">Save</button>
    </form>
</div> <!-- /container -->
